# GitHub Token (automatically provided by GitHub Actions)
GITHUB_TOKEN=your_github_token_here

# AI Provider: 'anthropic' or 'openai'
AI_PROVIDER=anthropic

# Demo Mode: Set to 'true' to use mock responses (FREE - no API costs!)
# Use for testing, demos, and development without spending API credits
# Set to 'false' or remove for production (real AI API calls)
DEMO_MODE=false

# Anthropic API Key (for Claude)
# Required only if DEMO_MODE=false and AI_PROVIDER=anthropic
# Get your key at: https://console.anthropic.com/
# Cost: ~$0.01-0.05 per code fix
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (for GPT-4/GPT-3.5)
# Required only if DEMO_MODE=false and AI_PROVIDER=openai
# Get your key at: https://platform.openai.com/api-keys
# Cost: ~$0.001-0.01 per code fix (GPT-3.5)
OPENAI_API_KEY=your_openai_api_key_here

